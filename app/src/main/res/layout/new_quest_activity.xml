<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".quest_page.NewQuest"
    tools:showIn="@layout/activity_new_quest">

    <TableLayout
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow>

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="48dp" />

            <EditText
                android:id="@+id/addQueast_Desc"
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:ems="10"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="0dp" />
            </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="48dp" />

            <EditText
                android:id="@+id/addQueast_Status"
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:ems="10"
                android:hint="Active/Done"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="0dp" />
        </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="48dp" />

            <EditText
                android:id="@+id/addQueast_Name"
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:ems="10"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="0dp" />
        </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Difficulty"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="48dp" />

            <EditText
                android:id="@+id/addQueast_Diff"
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:ems="10"
                android:hint="EASY/NORMAL/HARD"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="0dp" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/SaveCngsBtn"
                android:layout_width="45dp"
                android:layout_height="match_parent"

                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"

                android:gravity="center_horizontal"
                android:text="SAVE"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.619"
                app:layout_constraintStart_toStartOf="parent" />
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>